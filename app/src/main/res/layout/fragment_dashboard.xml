<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Dashboard.ui.Teacher.TeacherDashboard.Dashboard_Drawer_Teacher">

    <ScrollView
        android:id="@+id/dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="40dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_home_black_24dp"
                    android:text="HOME"
                    android:theme="@style/TextStyle"

                    />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/rl_checkbox"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/btn_round"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp">

                <TextView
                    android:id="@+id/btn_signin_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:text="SEARCH"
                    android:theme="@style/ButtonTextRound" />

                <ImageView
                    android:id="@+id/btn_signin_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_search_black_24dp" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ln_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_search"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="40dp">

                <LinearLayout
                    android:id="@+id/ln_demo"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/layout_round"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:text="DEMO"
                        android:textColor="@color/white_color"
                        android:theme="@style/TextNumber" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="50"
                        android:textColor="@color/white_color"
                        android:theme="@style/TextNumber" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_below"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_layout"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:id="@+id/ln_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/blue_layout_round"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:text="TEACHER"
                        android:textColor="@color/white_color"
                        android:theme="@style/TextNumber" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="20"
                        android:textColor="@color/white_color"
                        android:theme="@style/TextNumber" />


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ln_fees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_below"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:id="@+id/ln_fees_number"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/brown_layout_round"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:text="FEE"
                        android:textColor="@color/white_color"
                        android:theme="@style/TextNumber" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="5000"
                        android:textColor="@color/white_color"
                        android:theme="@style/TextNumber" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_fees"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:id="@+id/ln_subject_number"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/pink_layout_round"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:text="NUMBER OF SUBJECT"
                        android:textColor="@color/white_color"
                        android:theme="@style/TextNumber" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="5"
                        android:textColor="@color/white_color"
                        android:theme="@style/TextNumber" />


                </LinearLayout>
            </LinearLayout>




        </RelativeLayout>

    </ScrollView>

