<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserType.User_Type">

   

        

        <RelativeLayout
            android:id="@+id/rl_user"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true"
            android:paddingStart="30dp"
            android:padding="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/btn_round"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            >

            <TextView
                android:id="@+id/rl_user_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/ButtonTextRound"
                android:text="STUDENT"
                android:layout_centerInParent="true"
                android:padding="5dp"
                />

            <ImageView
                android:id="@+id/rl_user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_institute"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:paddingStart="30dp"
            android:padding="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_below="@id/rl_user_teacher"
            android:background="@drawable/btn_round"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            >

            <TextView
                android:id="@+id/rl_user_institute_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/ButtonTextRound"
                android:text="INSTITUTION"
                android:layout_centerInParent="true"
                android:padding="5dp"
                />

            <ImageView

                android:id="@+id/rl_user_institute_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_teacher"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:paddingStart="30dp"
        android:padding="5dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_below="@id/rl_user"
        android:background="@drawable/btn_round"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        >

        <TextView
            android:id="@+id/rl_user_teacher_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/ButtonTextRound"
            android:text="TEACHER"
            android:layout_centerInParent="true"
            android:padding="5dp"
            />

        <ImageView

            android:id="@+id/rl_user_teacher_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>





</RelativeLayout>