<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ln_login1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:weightSum="18">


        <RelativeLayout
            android:id="@+id/edt_classes"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/edt_class"
            android:layout_weight="1"
            android:background="@drawable/editbox">


            <TextView
                android:id="@+id/spinner_class_textview"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_toLeftOf="@+id/spinner_gender_imageview"
                android:background="@null"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinner_class"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:dropDownWidth="match_parent"
                android:popupBackground="@drawable/popupbackground" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/spinner_class"
                android:layout_alignEnd="@+id/spinner_class"
                android:layout_alignRight="@+id/spinner_class"
                android:layout_alignBottom="@+id/spinner_class"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:theme="@style/Spinner" />
        </RelativeLayout>


        <EditText
            android:id="@+id/edt_pref_subject"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:background="@drawable/editbox"
            android:hint="@string/preffered"
            android:padding="10dp"
            android:theme="@style/EditText" />

        <RelativeLayout
            android:id="@+id/edt_area"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:background="@drawable/editbox"

            >

            <TextView
                android:id="@+id/spinner_area_textview"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_toStartOf="@+id/spinner_gender_imageview"
                android:background="@null"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinner_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:dropDownWidth="match_parent"
                android:popupBackground="@drawable/popupbackground" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/spinner_area"
                android:layout_alignEnd="@+id/spinner_area"
                android:layout_alignRight="@+id/spinner_area"
                android:layout_alignBottom="@+id/spinner_area"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:theme="@style/Spinner" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>