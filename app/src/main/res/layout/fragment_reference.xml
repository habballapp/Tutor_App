<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Dashboard.ui.Teacher.TeacherForms.ReferenceFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <LinearLayout
                android:id="@+id/ln_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="References"
                    android:textAllCaps="false"
                    android:theme="@style/TextStyle"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ln_text"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/editbox"
                    android:hint="@string/name"
                    android:padding="10dp"
                    android:theme="@style/EditText" />


                <EditText
                    android:id="@+id/edt_relation"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/editbox"
                    android:drawablePadding="10dp"
                    android:hint="@string/relation"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:theme="@style/EditText" />

                <EditText
                    android:id="@+id/edt_occupation_ref"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/editbox"
                    android:hint="@string/occupation"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:theme="@style/EditText" />

                <EditText
                    android:id="@+id/edt_present_address"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/editbox"
                    android:hint="@string/address"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:theme="@style/EditText" />

                <EditText
                    android:id="@+id/edt_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/editbox"
                    android:hint="@string/telephone"
                    android:inputType="number"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:theme="@style/EditText"
                    tools:ignore="TextFields" />


            </LinearLayout>

            <RelativeLayout

                android:id="@+id/relativevToSlide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_reference"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:visibility="gone"

                >

                <LinearLayout
                    android:id="@+id/ln_experience1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="18">

                    <EditText
                        android:id="@+id/name1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/editbox"
                        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                        android:drawablePadding="10dp"
                        android:hint="@string/name"
                        android:padding="10dp"
                        android:paddingLeft="30dp"
                        android:theme="@style/EditText" />


                    <EditText
                        android:id="@+id/edt_relation1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/editbox"
                        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                        android:drawablePadding="10dp"
                        android:hint="@string/relation"
                        android:padding="10dp"
                        android:paddingLeft="30dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_occupation1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/editbox"
                        android:drawableLeft="@drawable/ic_work_black_24dp"
                        android:drawablePadding="10dp"
                        android:hint="@string/occupation"
                        android:padding="10dp"
                        android:paddingLeft="30dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_present_address1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/editbox"
                        android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                        android:drawablePadding="10dp"
                        android:hint="@string/address"
                        android:inputType="number"
                        android:padding="10dp"
                        android:paddingLeft="30dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_telephone1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/editbox"
                        android:drawableLeft="@drawable/ic_contact_phone_black_24dp"
                        android:drawablePadding="10dp"
                        android:hint="@string/telephone"
                        android:inputType="number"
                        android:padding="10dp"
                        android:paddingLeft="30dp"
                        android:theme="@style/EditText" />


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeZaplon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/relativevToSlide"
                android:layout_marginTop="20dp"
                android:background="@drawable/editbox">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/add_reference" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btn_refernce_next"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/relativeZaplon"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_round"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/btn_signin_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:text="Save"
                    android:theme="@style/ButtonTextRound" />

                <ImageView
                    android:id="@+id/btn_signin_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_arrow_forward_black_24dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/btn_refernce_next"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_round"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/back_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="Draft"
                    android:theme="@style/ButtonTextRound" />


            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>