<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:id="@+id/container"
    tools:context=".Dashboard.ui.Teacher.TeacherForms.Qualification">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <LinearLayout
                android:id="@+id/ln_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/qualification"
                    android:textAllCaps="false"
                    android:theme="@style/TextStyle"

                    />


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/relativevToSlide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_text"
                android:layout_marginTop="20dp"

                >

                <LinearLayout
                    android:id="@+id/ln_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/qualification"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/qualification"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/subject"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/subjects"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_institute"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                     
                        android:background="@drawable/editbox"
                        android:hint="@string/institute"
                        android:padding="10dp"
                      
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_passing_year"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/pyear"
                        android:inputType="number"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_grade"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/grade"
                        android:padding="10dp"
                        android:theme="@style/EditText" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeZaplon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/relativevToSlide"
                android:layout_marginTop="20dp"
                android:background="@drawable/editbox">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/qualification" />
            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/relativevToSlide1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeZaplon"
                android:visibility="gone"

                >

                <LinearLayout
                    android:id="@+id/ln_login1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/qualification1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/qualification"
                        android:padding="10dp"
                        android:theme="@style/EditText" />


                    <EditText
                        android:id="@+id/subject1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/subjects"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_institute1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/institute"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_passing_year1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/pyear"
                        android:inputType="number"
                        android:padding="10dp"
                      
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_grade1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/grade"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeZaplon1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/relativevToSlide1"
                android:layout_marginTop="20dp"
                android:background="@drawable/editbox">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/add_qualification" />
            </RelativeLayout>


            <RelativeLayout

                android:id="@+id/relativevToSlide2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeZaplon1"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ln_login2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                   >

                    <EditText
                        android:id="@+id/qualification2"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/qualification"
                        android:padding="10dp"
                        android:theme="@style/EditText" />


                    <EditText
                        android:id="@+id/subject2"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/subjects"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_institute2"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/institute"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_passing_year2"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/pyear"
                        android:inputType="number"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_grade2"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/grade"
                        android:padding="10dp"
                        android:theme="@style/EditText" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeZaplon2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/relativevToSlide2"
                android:layout_marginTop="20dp"
                android:background="@drawable/editbox">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/add_qualification" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativevToSlide3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeZaplon2"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ln_login3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                   >

                    <EditText
                        android:id="@+id/qualification3"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/qualification"
                        android:padding="10dp"
                        android:theme="@style/EditText" />
                    <EditText
                        android:id="@+id/subject3"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/subjects"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_institute3"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/institute"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_passing_year3"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/pyear"
                        android:inputType="number"
                        android:padding="10dp"
                      
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_grade3"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/grade"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeZaplon3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/relativevToSlide3"
                android:layout_marginTop="20dp"
                android:background="@drawable/editbox">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/add_qualification" />
            </RelativeLayout>


            <RelativeLayout

                android:id="@+id/relativevToSlide4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeZaplon3"
                android:visibility="gone"

                >

                <LinearLayout
                    android:id="@+id/ln_login4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                   >


                    <EditText
                        android:id="@+id/qualification4"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/qualification"
                        android:padding="10dp"
                        android:theme="@style/EditText" />


                    <EditText
                        android:id="@+id/subject4"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/subjects"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_institute4"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/institute"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_passing_year4"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/pyear"
                        android:inputType="number"
                        android:padding="10dp"
                        android:theme="@style/EditText" />

                    <EditText
                        android:id="@+id/edt_grade4"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/editbox"
                        android:hint="@string/grade"
                        android:padding="10dp"
                        android:theme="@style/EditText" />


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeZaplon4"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/relativevToSlide4"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/editbox">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/add_qualification" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_qualification_next"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/relativeZaplon4"
                android:background="@drawable/btn_round"
                android:padding="5dp">

                <TextView
                    android:id="@+id/btn_signin_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="Next"
                    android:theme="@style/ButtonTextRound" />

                <ImageView
                    android:id="@+id/btn_signin_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_arrow_forward_black_24dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/btn_qualification_next"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_round"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/back_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="Draft"
                    android:theme="@style/ButtonTextRound" />


            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>