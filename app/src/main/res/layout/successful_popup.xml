<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        >

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"
            android:layout_marginTop="17dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close_black_24dp" />

        <TextView
            android:id="@+id/tv_discard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_close"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:background="@drawable/alert_text_box_success"
            android:text="Discard Changes"
            android:textColor="@color/colorPrimary"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_discard_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_discard"
            android:layout_marginStart="28dp"
            android:layout_marginTop="18.5dp"
            android:layout_marginEnd="28dp"
            android:text="Are you sure, you want to logout?" />

    </RelativeLayout>
</RelativeLayout>