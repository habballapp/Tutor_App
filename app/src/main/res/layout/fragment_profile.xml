                        android:layout_toLeftOf="@+id/spinner_category_imageview"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:paddingStart="30dp"
                        android:paddingLeft="30dp"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/spinner_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:dropDownWidth="match_parent"
                        android:popupBackground="@drawable/popupbackground" />

                    <ImageView
                        android:id="@+id/spinner_category_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/spinner_category"
                        android:layout_alignEnd="@+id/spinner_category"
                        android:layout_alignRight="@+id/spinner_category"
                        android:layout_alignBottom="@+id/spinner_category"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:theme="@style/Spinner" />
                </RelativeLayout>


                <!--                <EditText-->
                <!--                    android:id="@+id/edt_occupation"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="55dp"-->
                <!--                    android:layout_marginTop="20dp"-->
