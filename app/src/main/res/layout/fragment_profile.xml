                <LinearLayout
                    android:id="@+id/date_filter1"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1.125"
                    android:background="@drawable/editbox"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/edt_date_of_submission"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center_vertical"
                        android:selectAllOnFocus="true"
                        android:text="DD-MM-YYYY" />

                    <ImageButton
                        android:id="@+id/second_date_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.75"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_date_range_black_24dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edt_phone1"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/editbox"
                    android:drawableLeft="@drawable/ic_contact_phone_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="@string/phone1"
                    android:selectAllOnFocus="true"
                    android:inputType="number"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:theme="@style/EditText" />

                <EditText
                    android:id="@+id/edt_phone2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/editbox"
                    android:drawableLeft="@drawable/ic_contact_phone_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="@string/phone2"
                    android:inputType="number"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:theme="@style/EditText" />


                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/editbox"
                    android:drawableLeft="@drawable/ic_mail_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="@string/mail"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:theme="@style/EditText" />


                <RelativeLayout
                    android:id="@+id/edt_profession"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/editbox"
                    android:drawableLeft="@drawable/ic_work_black_24dp"
                    android:theme="@style/EditText">

                    <TextView
                        android:id="@+id/teacher_profession_textview"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_toLeftOf="@+id/teacher_profession_imageview"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:paddingStart="30dp"
                        android:paddingLeft="30dp"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/teacher_profession"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:dropDownWidth="match_parent"
                        android:popupBackground="@drawable/popupbackground" />

                    <ImageView
                        android:id="@+id/teacher_profession_imageview"
                        android:layout_width="wrap_content"
