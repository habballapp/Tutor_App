<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".Dashboard.ui.Student.SearchFragment.FragmentSearch">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:id="@+id/rl_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <TextView
                android:id="@+id/txt_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Add Child"
                android:theme="@style/TextStyle">

            </TextView>

            <RelativeLayout
                android:id="@+id/spinner_container_subject"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/txt_subject"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:background="@drawable/editbox"
             >

                <Spinner
                    android:id="@+id/add_child"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:dropDownWidth="match_parent"
                    android:popupBackground="@drawable/popupbackground" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@id/add_child"
                    android:layout_alignEnd="@+id/add_child"
                    android:layout_alignRight="@+id/add_child"
                    android:layout_alignBottom="@+id/add_child"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:theme="@style/Spinner" />
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_child"
            android:layout_marginTop="20dp">


            <TextView
                android:id="@+id/txt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Select Area"
                android:theme="@style/TextStyle">

            </TextView>

            <RelativeLayout
                android:id="@+id/spinner_container_location"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/txt_location"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:background="@drawable/editbox"
            >

                <Spinner
                    android:id="@+id/spinner_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:dropDownWidth="match_parent"
                    android:popupBackground="@drawable/popupbackground" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@id/spinner_location"
                    android:layout_alignEnd="@+id/spinner_location"
                    android:layout_alignRight="@+id/spinner_location"
                    android:layout_alignBottom="@+id/spinner_location"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:theme="@style/Spinner" />
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rl_location"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_round"
            android:padding="5dp">

            <TextView
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Next"
                android:theme="@style/ButtonTextRound" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>