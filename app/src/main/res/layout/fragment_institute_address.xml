<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.ui.Profile.Institute.InstituteAddressFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">


            <LinearLayout
                android:id="@+id/ln_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logo"
                    >
                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_logo"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="Institution Information"
                    android:theme="@style/TextStyle"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ln_text"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:orientation="vertical"
                android:weightSum="18">


                <EditText
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:background="@drawable/editbox"
                    android:drawableLeft="@drawable/ic_home_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:hint="@string/address"
                    android:theme="@style/EditText" />

                <EditText
                    android:id="@+id/edt_bno"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:background="@drawable/editbox"
                    android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:hint="@string/bno"
                    android:theme="@style/EditText" />

                <EditText
                    android:id="@+id/edt_street"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:background="@drawable/editbox"
                    android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:hint="@string/sno"
                    android:theme="@style/EditText" />

                <EditText
                    android:id="@+id/edt_block"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"

                    android:inputType="text"
                    android:background="@drawable/editbox"
                    android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:hint="@string/blockno"
                    android:theme="@style/EditText" />

                <EditText
                    android:id="@+id/edt_area"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:inputType="text"
                    android:background="@drawable/editbox"
                    android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:hint="@string/ano"
                    android:theme="@style/EditText" />

                <EditText
                    android:id="@+id/edt_city"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:inputType="text"
                    android:background="@drawable/editbox"
                    android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:hint="@string/city"
                    android:theme="@style/EditText" />

                <EditText
                    android:id="@+id/edt_country"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:inputType="text"
                    android:background="@drawable/editbox"
                    android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:hint="@string/country"
                    android:theme="@style/EditText" />




                <RelativeLayout
                    android:id="@+id/edt_gender"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/editbox"
                    android:drawableLeft="@drawable/ic_work_black_24dp"
                    android:theme="@style/EditText"
                    >


                    />

                    <Spinner
                        android:id="@+id/spinner_gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:dropDownWidth="match_parent"
                        android:background="@null"
                        android:popupBackground="@drawable/popupbackground"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/spinner_gender"
                        android:layout_alignEnd="@+id/spinner_gender"
                        android:layout_alignRight="@+id/spinner_gender"
                        android:layout_alignBottom="@+id/spinner_gender"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:theme="@style/Spinner" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/edt_timings"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/editbox"
                    android:theme="@style/EditText">

                    <Spinner
                        android:id="@+id/spinner_timings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:dropDownWidth="match_parent"
                        android:background="@null"
                        android:popupBackground="@drawable/popupbackground"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/spinner_timings"
                        android:layout_alignEnd="@+id/spinner_timings"
                        android:layout_alignRight="@+id/spinner_timings"
                        android:layout_alignBottom="@+id/spinner_timings"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:theme="@style/Spinner" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/edt_conveyance_txt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/editbox"
                    android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:hint="@string/conveyance_type"
                    android:visibility="gone"
                    android:theme="@style/EditText" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_login"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"

                >

                <TextView
                    android:id="@+id/txt_fees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextStyle"
                    android:paddingLeft="110dp"
                    android:text="SALARY" />

                <LinearLayout
                    android:id="@+id/amount_filter_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_fees"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/amount_filter1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/line_bottom"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="PKR "
                            android:textColor="#676A6C" />

                        <EditText
                            android:id="@+id/et_amount1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:layout_weight="0.5"
                            android:background="@android:color/transparent"
                            android:inputType="number"
                            android:textColor="#676A6C"
                            android:textColorHint="#676A6C"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.75"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="#676A6C" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/amount_filter2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/line_bottom"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="PKR "
                            android:textColor="#676A6C" />

                        <EditText
                            android:id="@+id/et_amount2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@android:color/transparent"
                            android:inputType="number"
                            android:textColor="#676A6C"
                            android:textColorHint="#676A6C"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btn_profile_next"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/rl_salary"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_round"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp">

                <TextView
                    android:id="@+id/btn_signin_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:text="CREATE PROFILE"
                    android:theme="@style/ButtonTextRound" />



            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>



</FrameLayout>